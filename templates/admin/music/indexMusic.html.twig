{% extends 'base.html.twig' %}

{% block title %}Hello MusicController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <h1>{{ page_name }}!</h1>

    <form action="/music/page-1" method="post" class="d-flex">
        <input type="text" name="musicName">
        <button type="submit">Search</button>
    </form>

    <table>
    {% for music in musics %}
        <tr>
            <td>
                {{ music.getName() }} - <a href="/admin/music/delete/{{ music.getId() }}">Delete</a>
            </td>
        </tr>
    {% endfor %}
    </table>

    {% if musics|length == 0 %}
        <p>Aucun résulat</p>
    {% else %}
        {% for i in 1..numberOfPage %}
            <a href="/admin/music/page-{{ i }}">{{ i }}</a>
        {% endfor %}
    {% endif %}

    <div>
        <a href="/admin/music/add">Créer</a>
    </div>

</div>
{% endblock %}
